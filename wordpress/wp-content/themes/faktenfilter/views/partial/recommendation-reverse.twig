<div class="row"> 
  <div class="col-12">
    <div class="row">
      <div class="col-4">
        <div class="card-recom-info">
          <h3>{{ post.title }}</h3>
          <div class="l-preview-text">
            <p class="preview-text">
              {% if post.excerpt %}
                {{ post.excerpt }}
              {% else %}
                {{ post.content | slice(0, 100) }}... <!-- Show first 100 characters if no excerpt -->
              {% endif %}
            </p>
            <div class="card-interaction-no-like">
              <a class="cta cta-dark" href="{{ post.link }}">Mehr lesen</a>
            </div>
          </div>
        </div>
      </div>

      <div class="col-8">
        <div class="card-wide-flex card-recom">
          <div>
            {% if post.thumbnail %}
              <img src="{{ post.thumbnail.src('large') }}" alt="{{ post.title }}" />
            {% else %}
              <img src="/path/to/fallback.jpg" alt="Fallback image" />
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

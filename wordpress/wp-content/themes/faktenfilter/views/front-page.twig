{% extends "base.twig" %}

{% block content %}
<div class="section">
    <h2>Aktuelle Faktenfilter</h2>

    <div class="l-cards">
        {% for post in allgemein_posts %}
            {% include "partial/teaser.twig" with { post: post } %}
        {% else %}
            <p>Keine "Allgemein"-Beiträge gefunden.</p>
        {% endfor %}
    </div>   
    </div>

<div class="section">
        <h2>Hörenswert</h2>

    <div class="l-cards">
        {% set first_empfehlung = empfehlung_post|first %}
        {% if first_empfehlung %}
            {% include "partial/recommendation.twig" with { post: first_empfehlung } %}
        {% else %}
            <p>Keine "Empfehlung"-Beiträge gefunden.</p>
        {% endif %}
    </div> 
    </div>
{% endblock %}

